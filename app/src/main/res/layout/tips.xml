<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/animationlist"

    >

    <android.support.v7.widget.CardView
        android:layout_width="329dp"
        android:layout_height="83dp"
        android:layout_below="@+id/card_view2"
        android:layout_centerHorizontal="true"
        android:layout_margin="40px"
        android:clickable="true"
        app:cardBackgroundColor="#858585"
        app:cardCornerRadius="4dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="59dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/faq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
                android:background="#fff" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:background="#fff"


                android:scaleType="fitXY"
                android:src="@drawable/faq" />


            <TextView

                android:id="@+id/textView4"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/faq"
                android:layout_alignBottom="@+id/faq"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:text="FAQ"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="329dp"
        android:layout_height="83dp"
        android:layout_below="@+id/card_view1"
        android:layout_centerHorizontal="true"
        android:layout_margin="30px"
        android:clickable="true"
        app:cardBackgroundColor="#858585"
        app:cardCornerRadius="4dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="59dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/d_day"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="130dp"
                android:layout_height="match_parent"


                android:scaleType="fitXY"
                android:src="@drawable/exam" />


            <TextView
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/d_day"
                android:layout_alignBottom="@+id/d_day"
                android:layout_toEndOf="@+id/imageView5"
                android:layout_toRightOf="@+id/imageView5"
                android:text="D DAY"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="329dp"
        android:layout_height="83dp"
        android:clickable="true"
        app:cardBackgroundColor="#858585"
        app:cardCornerRadius="4dp"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="59dp"
        android:layout_margin="30px"
        android:layout_below="@+id/card_view1"
        android:layout_centerHorizontal="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/important_topics"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"/>
        <ImageView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"


            android:src="@drawable/info"
            android:id="@+id/imageView3" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/important_topics"
            android:layout_alignBottom="@+id/important_topics"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:text="Important Tips"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

</LinearLayout>