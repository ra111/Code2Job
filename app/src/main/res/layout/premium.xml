<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/animationlist"

    >

    <android.support.v7.widget.CardView
        android:layout_width="329dp"
        android:layout_height="83dp"
        android:layout_below="@+id/card_view12"
        android:layout_centerHorizontal="true"
        android:layout_margin="40px"
        android:clickable="true"
        app:cardBackgroundColor="#858585"
        app:cardCornerRadius="8dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="59dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/shortcut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
                android:onClick="onPremiumClicked"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageView34"
                android:layout_width="100dp"
                android:layout_height="match_parent"


                android:scaleType="fitXY"
                android:src="@drawable/vid" />


            <TextView
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:layout_toEndOf="@+id/imageView34"
                android:layout_toRightOf="@+id/imageView34"
                android:text="Section wise Questions "
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="329dp"
        android:layout_height="83dp"
        android:layout_below="@+id/card_view12"
        android:layout_centerHorizontal="true"
        android:layout_margin="40px"
        android:clickable="true"
        app:cardBackgroundColor="#858585"
        app:cardCornerRadius="8dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="59dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/premium_tips"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageView35"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#fff"
                android:scaleType="fitXY"
                android:src="@drawable/tipsp" />


            <TextView
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"

                android:layout_marginStart="35dp"
                android:layout_toEndOf="@+id/imageView35"
                android:layout_toRightOf="@+id/imageView35"
                android:text="Full Mock PAPER"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="329dp"
        android:layout_height="83dp"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#858585"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="59dp"
        android:layout_margin="40px"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/ask_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"

android:background="#fff"
                android:src="@drawable/ask"
                android:id="@+id/imageView36" />


            <TextView
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:layout_toEndOf="@+id/imageView36"
                android:layout_toRightOf="@+id/imageView36"
                android:fontFamily="@font/roboto_bold"
                android:text="Sample Paper"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>