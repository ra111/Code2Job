<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view13"
        android:layout_width="329dp"
        android:layout_height="83dp"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="59dp"
        android:layout_margin="40px"
        android:layout_below="@+id/card_view12"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/verbal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"


                android:src="@drawable/verbal"
                android:id="@+id/imageView14" />


            <TextView
                android:id="@+id/textView14"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:text="VERBAL"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView14"
                android:layout_toEndOf="@+id/imageView14"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/card_view14"
        android:layout_width="329dp"
        android:layout_height="83dp"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="59dp"
        android:layout_margin="40px"
        android:layout_below="@+id/card_view13"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/logical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"


                android:src="@drawable/logic"
                android:id="@+id/imageView15" />


            <TextView
                android:id="@+id/textView15"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:text="LOGICAL"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView15"
                android:layout_toEndOf="@+id/imageView15"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view24"
        android:layout_width="329dp"
        android:layout_height="83dp"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="59dp"
        android:layout_margin="40px"
        android:layout_below="@+id/card_view14"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/quants"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/maths"
                android:id="@+id/imageView16" />


            <TextView
                android:id="@+id/textView16"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:text="QUANTS"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView16"
                android:layout_toEndOf="@+id/imageView16"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>